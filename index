  <!-- Script for Receipt Download -->
  <script>
    function downloadReceipt() {
      const number = document.getElementById('receiptNumber').value.trim();
      const message = document.getElementById('message');

      if (number.length !== 10 || isNaN(number)) {
        message.textContent = "कृपया 10 अंकी मोबाईल क्रमांक योग्य टाका.";
        return;
      }

      const fileUrl = "receipts/" + number + ".jpg";

      fetch(fileUrl, { method: 'HEAD' })
        .then(res => {
          if (res.ok) {
            const link = document.createElement('a');
            link.href = fileUrl;
            link.download = number + ".jpg";
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            message.textContent = "";
          } else {
            message.textContent = "पावती सापडली नाही.";
          }
        })
        .catch(() => {
          message.textContent = "पावती सापडली नाही.";
        });
    }
  </script>
